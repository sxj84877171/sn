<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_blank">

    <RelativeLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f0f0f0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/big_text_p1" />

        <TextView
            android:id="@+id/class_students_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/big_text_p1" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/courses"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_below="@id/top_panel"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/examination_view_courses_chinese"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/chinese"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_p5"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/text_sky_gray"
                android:text="@string/examination_view_courses_chinese"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_match"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/match"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/big_text_p5"
                android:textColor="@color/text_sky_gray"
                android:text="@string/examination_view_courses_match"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_english"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/english"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/big_text_p5"
                android:textColor="@color/text_sky_gray"
                android:text="@string/examination_view_courses_english"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_physics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/physics"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_p5"
                android:layout_weight="1"
                android:textColor="@color/text_sky_gray"
                android:text="@string/examination_view_courses_physics"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_chemistry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/chemistry_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_p5"
                android:textColor="@color/text_sky_gray"
                android:layout_weight="1"
                android:text="@string/examination_view_courses_chemistry"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_biology"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/biology"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_p5"
                android:layout_weight="1"
                android:textColor="@color/text_sky_gray"
                android:text="@string/examination_view_courses_biology"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/history"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_p5"
                android:layout_weight="1"
                android:textColor="@color/text_sky_gray"
                android:text="@string/examination_view_courses_history"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_geography"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/geography_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sky_gray"
                android:textSize="@dimen/big_text_p5"
                android:layout_weight="1"
                android:text="@string/examination_view_courses_geography"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/examination_view_courses_politics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/politics"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sky_gray"
                android:textSize="@dimen/big_text_p5"
                android:layout_weight="1"
                android:text="@string/examination_view_courses_politics"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/courses"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/filler"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="@drawable/rancnge_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/home_fragment_fill_choose"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/big_text_p5"
                    android:textColor="@color/textview_item_student_title"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/filter_unselected"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_paper"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:background="@drawable/rancnge_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_fragment_new_parper"
                    android:textColor="@color/text_sky_gray"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/big_text_p5" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:id="@+id/paper_analog"
                android:layout_width="100dp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/big_text_p4"
                    android:text="@string/score_book_type_analog"
                    android:background="@drawable/rancnge_background"/>

                <ImageView
                    android:id="@+id/paper_analog_choose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/choose"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/paper_zhenti"
                android:layout_toEndOf="@id/paper_analog"
                android:layout_marginLeft="30dp"
                android:layout_width="100dp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/big_text_p4"
                    android:text="@string/score_book_type_zhenti"
                    android:background="@drawable/rancnge_background"/>

                <ImageView
                    android:id="@+id/paper_zhenti_choose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/choose"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/paper_personal"
                android:layout_toEndOf="@id/paper_zhenti"
                android:layout_width="100dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/big_text_p4"
                    android:text="@string/score_book_type_personal"
                    android:background="@drawable/rancnge_background"/>

                <ImageView
                    android:id="@+id/paper_personal_choose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/choose"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/add_paper"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:background="@drawable/rancnge_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_fragment_add_parper"
                    android:textColor="@color/text_sky_gray"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/big_text_p5" />
            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/course_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"></ListView>

    </LinearLayout>
</RelativeLayout>
