<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/paper_score_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/score_book_paper_type"
        android:textSize="@dimen/big_text_p4"/>

    <TextView
        android:id="@+id/paper_score_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="@string/score_book_paper_name"
        android:textSize="@dimen/big_text_p4"/>

    <TextView
        android:id="@+id/paper_score_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="@string/score_book_paper_time"
        android:textSize="@dimen/big_text_p4" />

    <TextView
        android:id="@+id/paper_score_all"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/score_book_paper_all"
        android:textSize="@dimen/big_text_p4" />

    <TextView
        android:id="@+id/paper_score_avl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/score_book_paper_avl"
        android:textSize="@dimen/big_text_p4" />

    <TextView
        android:id="@+id/paper_score_avl_percent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/score_book_paper_avl_pen"
        android:textSize="@dimen/big_text_p4"/>

        </LinearLayout>
</LinearLayout>