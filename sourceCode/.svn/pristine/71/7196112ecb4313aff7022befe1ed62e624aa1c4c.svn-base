<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/exam_question_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_text_p3"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:text="1" />

    <TextView
        android:id="@+id/exam_question_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/big_text_p3"
        android:layout_gravity="center_vertical"
        android:text="选择题" />

    <TextView
        android:id="@+id/exam_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:maxWidth="300dp"
        android:textSize="@dimen/big_text_p3"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="12岁的李明一年内明显长高12岁的李明一年内明显长高12岁的李明一年内明显长高12岁的李明一年内明显长高" />

    <TextView
        android:id="@+id/exam_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/big_text_p3"
        android:layout_gravity="center_vertical"
        android:text="100%" />

    <ProgressBar
        android:id="@+id/exam_progress_view"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="9"
        android:max="30"
        android:progress="26" />


</LinearLayout>