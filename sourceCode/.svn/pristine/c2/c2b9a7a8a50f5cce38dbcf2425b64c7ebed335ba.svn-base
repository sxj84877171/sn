<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:text="@string/examitation_replace_keyboard"
        android:textSize="@dimen/big_text_p4" />

    <LinearLayout
        android:id="@+id/name_linear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/name_list_student_name"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="20dp"
            android:textSize="@dimen/big_text_p4" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text_p4"
            android:gravity="center_horizontal"
            android:text="张三"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/old_id_linear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/name_replace_old_keyboard_id"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="20dp"
            android:textSize="@dimen/big_text_p4" />

        <TextView
            android:id="@+id/old_keyboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text_p4"
            android:gravity="center_horizontal"
            android:text="123456789012"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_id_linear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_id_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/name_replace_new_keyboard_id"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="20dp"
            android:textSize="@dimen/big_text_p4" />

        <EditText
            android:id="@+id/new_keyboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text_p4"
            android:gravity="center_horizontal"
            android:text="012345678901"
            android:inputType="number"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_id_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_list_cancel"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/name_list_save"/>

    </LinearLayout>
</RelativeLayout>