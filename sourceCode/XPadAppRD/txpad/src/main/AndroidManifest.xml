<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunvote.txpad">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".TXadApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.HomeActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme" >

            </activity>
        <activity android:name=".ui.manager.BaseStationManagerActivity" />
        <activity
            android:name=".ui.sign.SignActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".ui.exam.ExaminationActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorLandscape"></activity>

        <activity
            android:name=".ui.namelist.NameListActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorLandscape"></activity>

        <activity android:name=".ui.vexam.ExaminationViewActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorLandscape"/>
    </application>

</manifest>